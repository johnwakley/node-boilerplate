{
  // "extends": [
  //   "./node_modules/gts/tsconfig-google.json",
  //   "@tsconfig/node-lts/tsconfig.json"
  // ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",

    // override
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
