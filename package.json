{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "A starter template for Node.js apps.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently 'npx tsc --watch' 'nodemon -q build/src/index.js'",
