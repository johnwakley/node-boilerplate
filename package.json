    "posttest": "npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "concurrently": "^8.0.1",
    "gts": "^3.1.1",
    "husky": "^8.0.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.1",
    "p-retry": "^5.1.2"
  }
